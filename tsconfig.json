{
	"compilerOptions": {
		"target": "ES2019",
		"module": "esnext",
		"declaration": true,
		"sourceMap": true,
		"allowJs": true,
		"outDir": "./lib",
		"moduleResolution": "node",
		"types": ["jest", "node"],
		"lib": ["es2015"],
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["**/src/*.ts"],
	"exclude": ["node_modules", "tests"]
}
